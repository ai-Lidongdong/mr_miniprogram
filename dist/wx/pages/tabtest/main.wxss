@import "../../common/vendor.wxss";

.menu-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  width: 30%;
  text-align: center;
  border-top: solid 2rpx #ddd;
}
.menu-ul ._li {
  line-height: 80rpx;
  border: solid 2rpx #ddd;
  border-top: 0;
}
.foods-wrapper {
  position: absolute;
  right: 0;
  top: 0;
  width: 70%;
  height: 100%;
  border-left: solid 2rpx #ddd;
}
.list-item {
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  border-bottom: solid 2rpx #ddd;
}
.current {
  color: #f00;
}